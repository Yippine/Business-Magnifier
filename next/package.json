{
  "name": "business-magnifier",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// === 本地開發指令 ===": "",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && eslint --fix .",
    
    "// === Docker 開發環境指令 ===": "",
    "docker:dev": "docker-compose --profile dev up -d",
    "docker:dev:build": "docker-compose --profile dev up --build -d",
    "docker:dev:logs": "docker-compose logs -f app-dev",
    "docker:dev:shell": "docker exec -it business-magnifier-app-dev sh",
    
    "// === Docker 基礎服務指令 ===": "",
    "docker:mongo": "docker-compose up mongodb -d",
    "docker:tools": "docker-compose --profile tools up -d",
    "docker:prod": "docker-compose --profile prod up -d",
    
    "// === Docker 完整環境指令 ===": "",
    "docker:full-dev": "docker-compose --profile dev --profile tools up -d",
    "docker:full-prod": "docker-compose --profile prod --profile tools up -d",
    "docker:all": "docker-compose --profile dev --profile prod --profile tools up -d",
    
    "// === Docker 管理指令 ===": "",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    
    "// === 資料庫相關指令 ===": "",
    "db:connect": "mongosh mongodb://localhost:27017/business-magnifier",
    "db:connect-docker": "mongosh mongodb://admin:password@localhost:27017/business-magnifier?authSource=admin",

    "// === MongoDB AI Tools 備份與還原 ===": "",
    "db:backup": "sh ./scripts/backup-ai-tools.sh",
    "db:restore": "node scripts/restore-ai-tools.js",
    "db:list": "node scripts/analyze-backups.js",
    
    "// === 快速啟動指令 (推薦使用) ===": "",
    "start:dev": "npm run docker:full-dev",
    "start:prod": "npm run docker:full-prod",
    "stop": "npm run docker:down"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@react-google-maps/api": "^2.20.6",
    "chart.js": "^4.4.8",
    "chartjs-adapter-date-fns": "^3.0.0",
    "cheerio": "^1.0.0",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.479.0",
    "mongoose": "^8.0.3",
    "next": "^14.1.0",
    "nodemailer": "^7.0.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-schemaorg": "^2.0.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^4.41.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.24",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.18",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.2"
  }
}

// /app/sitemap.xml/route.ts
import { NextResponse } from 'next/server';
import { connectToDatabase } from '@/lib/database/connection';
import Company from '@/lib/database/models/Company';
import Tender from '@/lib/database/models/Tender';
import AITool from '@/lib/database/models/AITool';

export async function GET() {
  try {
    await connectToDatabase();

    // 靜態頁面
    const staticPages = [
      { url: '/', priority: 1.0, changefreq: 'daily' },
      { url: '/company/search', priority: 0.9, changefreq: 'hourly' },
      { url: '/tender/search', priority: 0.9, changefreq: 'hourly' },
      { url: '/aitool', priority: 0.8, changefreq: 'daily' },
      { url: '/aitool/search', priority: 0.8, changefreq: 'daily' },
      { url: '/faq', priority: 0.7, changefreq: 'monthly' },
      { url: '/privacy', priority: 0.7, changefreq: 'monthly' },
      { url: '/feedback', priority: 0.6, changefreq: 'monthly' },
      { url: '/feedback/success', priority: 0.3, changefreq: 'yearly' }
    ];

    // 熱門企業頁面 (1000個)
    const popularCompanies = await Company.find({ isActive: true })
      .sort({ searchCount: -1 })
      .limit(1000)
      .select('taxId updatedAt');

    // 重要標案頁面 (500個)
    const importantTenders = await Tender.find({ 
      status: { $in: ['active', 'open', 'published'] }
    })
      .sort({ tenderValue: -1 })
      .limit(500)
      .select('_id updatedAt');

    // 熱門AI工具 (100個)
    const popularAITools = await AITool.find({ isActive: true })
      .sort({ 'usage.totalUses': -1 })
      .limit(100)
      .select('id updatedAt');

    // 生成 XML
    const baseUrl = process.env.NEXT_PUBLIC_BASE_URL || 'https://yourdomain.com';
    const now = new Date().toISOString();

    let sitemap = `<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">`;

    // 靜態頁面
    staticPages.forEach(page => {
      sitemap += `
  <url>
    <loc>${baseUrl}${page.url}</loc>
    <lastmod>${now}</lastmod>
    <changefreq>${page.changefreq}</changefreq>
    <priority>${page.priority}</priority>
  </url>`;
    });

    // 熱門企業
    popularCompanies.forEach(company => {
      sitemap += `
  <url>
    <loc>${baseUrl}/company/detail/${company.taxId}</loc>
    <lastmod>${company.updatedAt.toISOString()}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
  </url>`;
    });

    // 重要標案
    importantTenders.forEach(tender => {
      sitemap += `
  <url>
    <loc>${baseUrl}/tender/detail/${tender._id}</loc>
    <lastmod>${tender.updatedAt.toISOString()}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>`;
    });

    // 熱門AI工具
    popularAITools.forEach(tool => {
      sitemap += `
  <url>
    <loc>${baseUrl}/aitool/detail/${tool.id}</loc>
    <lastmod>${tool.updatedAt.toISOString()}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>`;
    });

    sitemap += '\n</urlset>';

    return new NextResponse(sitemap, {
      headers: {
        'Content-Type': 'application/xml',
        'Cache-Control': 'public, max-age=3600, s-maxage=3600'
      }
    });

  } catch (error) {
    console.error('Sitemap 生成失敗:', error);
    return new NextResponse('Internal Server Error', { status: 500 });
  }
}
